<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
            <import type = "android.view.View" />
            <variable
                name="nameH"
                type="String" />
            <variable
                name="image"
                type = "String"/>
            <variable
                name="frSkill"
                type="String" />
            <variable
                name="frSkillRev"
                type="String" />
            <variable
                name="scSkill"
                type="String" />
            <variable
                name="scSkillRev"
                type="String" />
            <variable
                name="thSkill"
                type="String" />
            <variable
                name="thSkillRev"
                type="String" />
            <variable
                name="foSkill"
                type="String" />
            <variable
                name="foSkillRev"
                type="String" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_back"
         >
        <ImageView
            android:id="@+id/icon_hero"
            android:layout_width="109dp"
            android:layout_height="99dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/JinSheSelect"

            />

        <TextView
            android:id="@+id/name_Hero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_hero"
            android:layout_centerHorizontal="true"
            android:text="Jin She"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/name_Hero"
            android:orientation="vertical"
            
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frSkill"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/icon_frSkill_lay"
                    >
                    <ImageView
                        android:id="@+id/icon_frSkill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/Firestarter" 
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/icon_frSkill_lay"
                    tools:ignore="NotSibling">
                    
                    <TextView
                        android:id="@+id/name_first_skill"
                        android:layout_toRightOf="@id/icon_frSkill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name_Hero"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Everthirst Flame	Mana Cost: 85/90/95/100 Cooldown: 10 seconds Range: 750 Radius: 90 "
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/review_first_skill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:text="Target a direction to deal 75/100/125/150 Magic damage and a 0.8/1/1.2/1.4 second Stun to enemies in a line.
Everthirst Flame will extend its range (by 800?) after touching an enemy or ally unit. Cast time 0.35"

                        />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seSkill"
                
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/icon_seSkill_lay"
                    >
                    <ImageView
                        android:id="@+id/icon_seSkill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/Firestarter"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/icon_seSkill_lay"
                    tools:ignore="NotSibling">

                    <TextView
                        android:id="@+id/name_second_skill"
                        android:layout_toRightOf="@id/icon_frSkill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        android:layout_margin="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Everthirst Flame	Mana Cost: 85/90/95/100 Cooldown: 10 seconds Range: 750 Radius: 90 "
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/review_second_skill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:text="Target a direction to deal 75/100/125/150 Magic damage and a 0.8/1/1.2/1.4 second Stun to enemies in a line.
Everthirst Flame will extend its range (by 800?) after touching an enemy or ally unit. Cast time 0.35"
                        
                        />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/thSkill"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/icon_thSkill_lay"
                    >
                    <ImageView
                        android:id="@+id/icon_thSkill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/Firestarter"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/icon_thSkill_lay"
                    tools:ignore="NotSibling">

                    <TextView
                        android:id="@+id/name_third_skill"
                        android:layout_toRightOf="@id/icon_frSkill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Everthirst Flame	Mana Cost: 85/90/95/100 Cooldown: 10 seconds Range: 750 Radius: 90 "
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/review_third_skill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:text="Target a direction to deal 75/100/125/150 Magic damage and a 0.8/1/1.2/1.4 second Stun to enemies in a line.
Everthirst Flame will extend its range (by 800?) after touching an enemy or ally unit. Cast time 0.35"

                        />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/foSkill"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/icon_foSkill_lay"
                    >
                    <ImageView
                        android:id="@+id/icon_fourthSkill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/Firestarter"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/icon_foSkill_lay"
                    tools:ignore="NotSibling">

                    <TextView
                        android:id="@+id/name_fourth_skill"
                        android:layout_toRightOf="@id/icon_frSkill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Everthirst Flame	Mana Cost: 85/90/95/100 Cooldown: 10 seconds Range: 750 Radius: 90 "
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/review_fourth_skill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:text="Target a direction to deal 75/100/125/150 Magic damage and a 0.8/1/1.2/1.4 second Stun to enemies in a line.
Everthirst Flame will extend its range (by 800?) after touching an enemy or ally unit. Cast time 0.35"

                        />
                </LinearLayout>


            </RelativeLayout>


            
        </LinearLayout>

       


    </RelativeLayout>
</layout>